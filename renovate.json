{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "branchPrefix": "feature/renovate/",
    "flux": {
        "managerFilePatterns": [
            "/\\.yaml$/"
        ]
    },
    "packageRules": [
        {
            "matchUpdateTypes": [
                "pin",
                "digest",
                "patch",
                "lockFileMaintenance"
            ],
            "addLabels": [
                "release:patch"
            ],
            "minimumReleaseAge": "1 day",
            "automerge": true,
            "matchCurrentVersion": "!/^0/",
            "ignoreTests": true,
            "dependencyDashboardApproval": false
        },
        {
            "matchUpdateTypes": [
                "minor"
            ],
            "addLabels": [
                "release:minor",
                "on-hold"
            ],
            "minimumReleaseAge": "7 days",
            "automerge": false,
            "matchCurrentVersion": "!/^0/",
            "ignoreTests": true,
            "dependencyDashboardApproval": false
        },
        {
            "matchUpdateTypes": [
                "major"
            ],
            "addLabels": [
                "release:major",
                "on-hold"
            ],
            "minimumReleaseAge": "14 days",
            "automerge": false,
            "dependencyDashboard": true,
            "dependencyDashboardApproval": false
        }
    ]
}
